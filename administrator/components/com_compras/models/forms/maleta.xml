<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" 
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" 
			size="10" 
			default="0"
			required="true" 
			readonly="true"
			class="readonly"
		/>

		<field name="name" 
			type="textarea"
			label="COM_COMPRAS_FIELD_NAME_LABEL" 
			description="COM_COMPRAS_FIELD_NAME_DESC"
			class="inputbox" 
			size="30" 
			required="true"
		 />

		<field name="detail" 
			type="textarea" 
			label="COM_COMPRAS_FIELD_DETAIL_LABEL"
			description="COM_COMPRAS_FIELD_DETAIL_DESC" 
			class="inputbox" 
			size="30" 
		/>		

		<field name="name_en" 
			type="textarea"
			label="COM_COMPRAS_FIELD_NAME_EN_LABEL" 
			description="COM_COMPRAS_FIELD_NAME_EN_DESC"
			class="inputbox" 
			size="30" 
		 />

		<field name="detail_en" 
			type="textarea" 
			label="COM_COMPRAS_FIELD_DETAIL_EN_LABEL"
			description="COM_COMPRAS_FIELD_DETAIL_EN_DESC" 
			class="inputbox" 
			size="30" 
		/>		
		
		<field name="game" 
			type="selectgame" 
			extension="com_compras"
			label="COM_COMPRAS_FIELD_SELECTGAME_LABEL" 
			description="COM_COMPRAS_FIELD_SELECTGAME_DESC"
			class="inputbox" 
			required="true"
		/>
		
		<field name="costo" 
			type="text" 
			label="COM_COMPRAS_FIELD_COSTO"
			description="COM_COMPRAS_FIELD_COSTO_DESC" 
			class="inputbox" 
			size="30" 
		/>

		<field name="webinar" type="list" label="Agregar webinar"
			description="Agregar webinar" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				Mostrar</option>
			<option value="0">
				No mostrar</option>
		</field>

		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>	

		<field name="show_in_list" type="list" label="Mostrar en listado"
			description="Mostrar en listado" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				Mostrar</option>
			<option value="0">
				No mostrar</option>
		</field>

		<field
					name="envio"
					type="radio"
					label="Envío"
					description="Envío"
					default="1"
					filter="integer"
					class="btn-group btn-group-yesno"
					>
					<option value="1">SI</option>
					<option value="0">NO</option>
				</field>


		<field name="checked_out" 
			type="hidden" 
			filter="unset" 
		/>

		<field name="checked_out_time" 
			type="hidden" 
			filter="unset"
		 />

		<field name="ordering" 
			type="ordering" 
			class="inputbox"
			label="JFIELD_ORDERING_LABEL" 
			description="JFIELD_ORDERING_DESC" 
		/>

		
	</fieldset>

	
</form>
